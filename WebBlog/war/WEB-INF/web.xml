<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>webblog</servlet-name>
		<servlet-class>webblog.WebBlogServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>webblog</servlet-name>
		<url-pattern>/webblog</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>webblog.jsp</welcome-file>
	</welcome-file-list>
	
	 <servlet>

        <servlet-name>sign</servlet-name>

        <servlet-class>webblog.LeaveCommentServlet</servlet-class>

    </servlet>

    <servlet-mapping>

        <servlet-name>sign</servlet-name>

        <url-pattern>/sign</url-pattern>

    </servlet-mapping>
	
	
</web-app>
